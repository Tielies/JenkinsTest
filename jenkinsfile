pipeline {
    agent { docker { image 'python:3.14.2-alpine3.23' } }
    stages {
        stage('build') {
            steps {
                sh 'python --version'
                sh 'python hello.py'
            }
        }
        stage('test') {
            steps {
                sh 'python -m unittest test_hello.py'
            }
        }
    }
}